# ── LLM Provider ──────────────────────────
# Uncomment and set the API key for your provider
# OPENROUTER_API_KEY=sk-or-v1-xxx
# ZHIPU_API_KEY=xxx
# ANTHROPIC_API_KEY=sk-ant-xxx
# OPENAI_API_KEY=sk-xxx
# GEMINI_API_KEY=xxx
# CEREBRAS_API_KEY=xxx

# ── Embedding Model (for Qdrant vector storage) ──────────────────────────
# MISTRAL_API_KEY=xxx  # Required for mistral-embed embeddings
# PICOCLAW_EMBEDDING_API_KEY=xxx  # Alternative: dedicated embedding API key
# PICOCLAW_EMBEDDING_MODEL=mistral-embed

# ── Chat Channel ──────────────────────────
# TELEGRAM_BOT_TOKEN=123456:ABC...
# DISCORD_BOT_TOKEN=xxx
# LINE_CHANNEL_SECRET=xxx
# LINE_CHANNEL_ACCESS_TOKEN=xxx

# ── Web Search (optional) ────────────────
# BRAVE_SEARCH_API_KEY=BSA...

# ── Vector Storage (Qdrant) ──────────────────────────
# PICOCLAW_STORAGE_QDRANT_ENABLED=false
# PICOCLAW_STORAGE_QDRANT_HOST=localhost
# PICOCLAW_STORAGE_QDRANT_PORT=6333
# PICOCLAW_STORAGE_QDRANT_GRPC_PORT=6334
# PICOCLAW_STORAGE_QDRANT_API_KEY=  # Optional, for Qdrant Cloud
# PICOCLAW_STORAGE_QDRANT_COLLECTION=picoclaw_messages
# PICOCLAW_STORAGE_QDRANT_VECTOR_SIZE=1024  # mistral-embed dimension
# PICOCLAW_STORAGE_QDRANT_SECURE=false  # Use HTTPS

# ── Timezone ──────────────────────────────
TZ=Asia/Tokyo
